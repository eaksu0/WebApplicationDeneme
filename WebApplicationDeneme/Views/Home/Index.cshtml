@using WebApplicationDeneme.Models
@model IEnumerable<WebApplicationDeneme.Models.Blog>
@{
    ViewData["Title"] = "Home";
    // Slider beklenen tip: ImagePath, Heading, Text, LinkText, LinkUrl
    var sliders = ViewBag.Sliders as IEnumerable<dynamic>; // yoksa default tek slide gösterilecek
    var refs = ViewBag.References as List<Reference>;
}

<style>
    .hero {
        border-radius: 20px;
        overflow: hidden;
        position: relative;
        background: linear-gradient(135deg,#13547a,#80d0c7);
    }

        .hero .carousel-item {
            height: 420px;
            background: #0b2239;
            position: relative;
        }

            .hero .carousel-item > img {
                position: absolute;
                inset: 0;
                width: 100%;
                height: 100%;
                object-fit: cover;
                opacity: .45;
            }

        .hero .caption {
            position: relative;
            z-index: 2;
            color: #fff;
            text-shadow: 0 2px 16px rgba(0,0,0,.35);
        }

    .blog-card img {
        aspect-ratio: 16/9;
        object-fit: cover;
    }

    .brand-logo {
        opacity: .8;
        transition: all .2s;
        filter: grayscale(30%);
    }

        .brand-logo:hover {
            opacity: 1;
            filter: none;
            transform: translateY(-2px);
        }
</style>

<div class="container py-4">

    <!-- HERO SLIDER -->
    <div id="homeHero" class="carousel slide hero mb-5" data-bs-ride="carousel">
        <div class="carousel-indicators">
            @{
                int idx = 0;
                if (sliders != null && sliders.Any())
                {
                    foreach (var _ in sliders)
                    {
                        <button type="button" data-bs-target="#homeHero" data-bs-slide-to="@idx" class="@(idx == 0 ? "active" : "")" aria-current="@(idx == 0 ? "true" : "false")"></button>
                        ;
                        idx++;
                    }
                }
                else
                {
                    <button type="button" data-bs-target="#homeHero" data-bs-slide-to="0" class="active" aria-current="true"></button>
                }
            }
        </div>

        <div class="carousel-inner">
            @if (sliders != null && sliders.Any())
            {
                var first = true;
                foreach (var s in sliders)
                {
                    <div class="carousel-item @(first ? "active" : "")">
                        <img src="@Url.Content((string)s.ImagePath ?? "~/assets/img/hero-default.jpg")" alt="">
                        <div class="container h-100 d-flex align-items-center">
                            <div class="caption">
                                <h1 class="display-5 fw-bold mb-3">@((string?)s.Heading ?? "Güçlü, Modern, Güvenli")</h1>
                                <p class="lead mb-4" style="max-width: 720px;">@((string?)s.Text ?? "İhtiyaca göre özelleştirilen yazılım ve veri çözümleri.")</p>
                                @if (!string.IsNullOrWhiteSpace((string?)s.LinkUrl))
                                {
                                    <a class="btn btn-light btn-lg rounded-pill px-4"
                                       href="@((string)s.LinkUrl)">@((string?)s.LinkText ?? "İletişime Geç")</a>
                                }
                            </div>
                        </div>
                    </div>
                    first = false;
                }
            }
            else
            {
                <!-- Slider verisi yoksa: varsayılan tek slide -->
                <div class="carousel-item active">
                    <img src="~/assets/img/hero-default.jpg" alt="">
                    <div class="container h-100 d-flex align-items-center">
                        <div class="caption">
                            <h1 class="display-5 fw-bold mb-3">TEST APPLICATION</h1>
                            <p class="lead mb-4" style="max-width: 720px;">
                                Şeffaf, güvenli ve kullanıcı odaklı çözümler.
                            </p>
                            <a class="btn btn-light btn-lg rounded-pill px-4" href="/About">Hakkımızda</a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#homeHero" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
            <span class="visually-hidden">Önceki</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#homeHero" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
            <span class="visually-hidden">Sonraki</span>
        </button>
    </div>

    <!-- SON BLOGLAR -->
    <section class="mb-5">
        <div class="d-flex align-items-end justify-content-between mb-3">
            <h2 class="mb-0">Son Eklenen Bloglar</h2>
            <a asp-controller="Blogs" asp-action="Index" class="btn btn-outline-primary btn-sm">Tüm Bloglar</a>
        </div>

        <div class="row g-4">
            @foreach (var blog in (Model ?? Enumerable.Empty<Blog>()).Take(3))
            {
                <div class="col-md-4">
                    <div class="card blog-card h-100 border-0 shadow-sm">
                        @if (!string.IsNullOrEmpty(blog.ImagePath))
                        {
                            <img src="@Url.Content(blog.ImagePath)" class="card-img-top" alt="@blog.Title" />
                        }
                        <div class="card-body">
                            <h5 class="card-title">@blog.Title</h5>
                            <p class="card-text text-muted">@blog.ShortText</p>
                            <a asp-controller="Blogs" asp-action="Details" asp-route-id="@blog.Id"
                               class="btn btn-primary">Devamını Oku</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

    <!-- REFERANSLAR -->
    @if (refs != null && refs.Any())
    {
        <section class="mb-2">
            <h3 class="mb-3">Referanslarımız</h3>
            <div class="row g-3 align-items-center">
                @foreach (var r in refs)
                {
                    <div class="col-6 col-sm-4 col-md-3 col-lg-2 text-center">
                        <div class="card h-100 border-0">
                            @if (!string.IsNullOrEmpty(r.ImagePath))
                            {
                                <img src="@Url.Content(r.ImagePath)" class="img-fluid brand-logo" alt="@r.Name" />
                            }
                            <div class="card-body py-2">
                                <div class="small text-muted">@r.Name</div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>
    }
</div>
