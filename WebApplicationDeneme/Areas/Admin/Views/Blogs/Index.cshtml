<table class="table table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Görsel</th>
            <th>İşlemler</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.Id</td>
                <td>@b.Title</td>
                <td>
                    @if (!string.IsNullOrWhiteSpace(b.ImagePath))
                    {
                        <img src="@b.ImagePath" style="max-height:60px" />
                    }
                </td>
                <td>
                    <a class="btn btn-sm btn-outline-danger"
                       asp-area="Admin" asp-controller="Blogs" asp-action="Delete" asp-route-id="@b.Id">
                        Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
