@model IEnumerable<WebApplicationDeneme.Models.Role>
@{
    ViewData["Title"] = "Roller";
}
<h2>Roller</h2>

<p><a asp-action="Create" class="btn btn-primary">Yeni Rol</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Rol Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Id</td>
                <td>@r.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@r.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@r.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
