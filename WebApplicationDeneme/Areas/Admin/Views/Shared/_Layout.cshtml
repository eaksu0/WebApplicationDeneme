@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims


<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin</title>

    <!-- Bootstrap (CDN veya projendeki lib path) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-light">
    <!-- Admin Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">

            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                Admin Sayfası
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNav"
                    aria-controls="adminNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="adminNav">
                <!-- Sol Menüler -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    <!-- Kullanıcılar -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            Kullanıcılar
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item"
                                   asp-area="Admin" asp-controller="Users" asp-action="Index">
                                    Kullanıcı Listesi
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item"
                                   asp-area="Admin" asp-controller="Users" asp-action="Create">
                                    Kullanıcı Ekle
                                </a>
                            </li>
                        </ul>
                    </li>

                    <!-- Roller -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            Roller
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item"
                                   asp-area="Admin" asp-controller="Roles" asp-action="Index">
                                    Rol Listesi
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item"
                                   asp-area="Admin" asp-controller="Roles" asp-action="Create">
                                    Rol Ekle
                                </a>
                            </li>
                        </ul>
                    </li>

                    <!-- Bloglar -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            Bloglar
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item"
                                   asp-area="Admin" asp-controller="Blogs" asp-action="Index">
                                    Blog Listesi
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item"
                                   asp-area="Admin" asp-controller="Blogs" asp-action="Create">
                                    Blog Ekle
                                </a>
                            </li>
                        </ul>
                    </li>
                   
                     <!-- References -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Referanslar</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-area="Admin" asp-controller="References" asp-action="Index">Referans Listesi</a></li>
                            <li><a class="dropdown-item" asp-area="Admin" asp-controller="References" asp-action="Create">Referans Ekle</a></li>
                        </ul>
                    </li>

                </ul>
                
                

                <!-- Sağ Taraf: Kullanıcı ve Çıkış -->
                <ul class="navbar-nav ms-auto">
                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        <li class="nav-item me-2">
                            <span class="navbar-text text-white-50">
                                @(User.FindFirst("FullName")?.Value ?? User.Identity!.Name)
                            </span>
                        </li>
                        <li class="nav-item">
                            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-danger">Çıkış</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="btn btn-sm btn-outline-light" asp-area="" asp-controller="Account" asp-action="Login">
                                Giriş
                            </a>
                        </li>
                        <li class="nav-item ms-2">
                            <a class="btn btn-sm btn-outline-success" asp-area="" asp-controller="Account" asp-action="Register">
                                Kayıt Ol
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Sayfa İçeriği -->
    <div class="container-fluid py-4">
        @RenderBody()
    </div>

    <footer class="border-top text-muted py-3 bg-white">
        <div class="container">
            © @DateTime.Now.Year - Admin Panel
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
