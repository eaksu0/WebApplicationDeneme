@model WebApplicationDeneme.Models.AppUser
@{
    ViewData["Title"] = "Kullanıcı Sil";
}

<h2>Kullanıcı Sil</h2>

<h4>Bu kullanıcıyı silmek istediğinize emin misiniz?</h4>

<div class="mb-3">
    <p><strong>Ad Soyad:</strong> @Model.Name @Model.Surname</p>
    <p><strong>Kullanıcı Adı:</strong> @Model.UserName</p>
    <p><strong>E-posta:</strong> @Model.Email</p>
    <p><strong>Rol:</strong> @(Model.Role?.Name ?? "-")</p>
</div>

<form asp-area="Admin" asp-controller="Users" asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Evet, Sil</button>
    <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
