@model IEnumerable<WebApplicationDeneme.Models.AppUser>

@{
    ViewData["Title"] = "Kullanıcılar";
}

<h2>Kullanıcılar</h2>

<p>
    <a asp-area="Admin" asp-controller="Users" asp-action="Create" class="btn btn-primary">
        Yeni Kullanıcı
    </a>
</p>

@if (Model != null && Model.Any())
{
    <table class="table table-striped align-middle">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Ad Soyad</th>
                <th>Kullanıcı Adı</th>
                <th>E-posta</th>
                <th>Telefon</th>
                <th>Rol</th>
                <th style="width:150px;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
            {
                <tr>
                    <td>@u.Id</td>
                    <td>@u.Name @u.Surname</td>
                    <td>@u.UserName</td>
                    <td>@u.Email</td>
                    <td>@u.PhoneNumber</td>
                    <td>@(u.Role?.Name ?? "-")</td>
                    <td>
                        <a asp-area="Admin" asp-controller="Users" asp-action="Edit" asp-route-id="@u.Id"
                           class="btn btn-sm btn-warning">Düzenle</a>

                        <form asp-area="Admin" asp-controller="Users" asp-action="Delete" method="post"
                              asp-route-id="@u.Id" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger"
                                    onclick="return confirm('Bu kullanıcıyı silmek istediğinize emin misiniz?');">
                                Sil
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        Henüz kayıtlı kullanıcı bulunmamaktadır.
    </div>
}
