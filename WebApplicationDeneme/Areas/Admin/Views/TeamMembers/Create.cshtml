@model WebApplicationDeneme.Models.TeamMember
@{
    ViewData["Title"] = "Üye Ekle";
}

<div class="container py-4">
    <h2>Üye Ekle</h2>

    <form asp-area="Admin" asp-controller="TeamMembers" asp-action="Create"
          method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Surname" class="form-label"></label>
            <input asp-for="Surname" class="form-control" />
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder" class="form-label">Sıra</label>
            <input asp-for="DisplayOrder" type="number" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Fotoğraf</label>
            <input type="file" name="photo" accept=".jpg,.jpeg,.png,.gif,.webp" class="form-control" />
            <span asp-validation-for="PhotoPath" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Kaydet</button>
        <a asp-area="Admin" asp-controller="TeamMembers" asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
 }
