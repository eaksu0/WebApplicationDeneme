@model WebApplicationDeneme.Models.Slider
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Slider Düzenle";
}
<h2>Slider Düzenle</h2>
<form asp-action="Edit" method="post" enctype="multipart/form-data" class="row g-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ImagePath" />

    <div class="col-md-6">
        <label asp-for="Heading" class="form-label"></label>
        <input asp-for="Heading" class="form-control" />
        <span asp-validation-for="Heading" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Text" class="form-label"></label>
        <input asp-for="Text" class="form-control" />
    </div>

    <div class="col-md-4">
        <label asp-for="LinkText" class="form-label"></label>
        <input asp-for="LinkText" class="form-control" />
    </div>
    <div class="col-md-8">
        <label asp-for="LinkUrl" class="form-label"></label>
        <input asp-for="LinkUrl" class="form-control" />
        <span asp-validation-for="LinkUrl" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label class="form-label d-block">Mevcut Görsel</label>
        @if (!string.IsNullOrWhiteSpace(Model.ImagePath))
        {
            <img src="@Url.Content(Model.ImagePath)" style="height:70px;border-radius:6px;object-fit:cover;">
        }
        <div class="mt-2">
            <input type="file" name="image" class="form-control" accept="image/*" />
            <div class="form-text">Yeni yüklenirse eskisi silinir.</div>
        </div>
    </div>

    <div class="col-md-4">
        <label asp-for="SortOrder" class="form-label"></label>
        <input asp-for="SortOrder" class="form-control" />
    </div>

    <div class="col-md-4 form-check mt-4">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label"></label>
    </div>

    <div class="col-12">
        <button class="btn btn-primary">Güncelle</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Geri</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
